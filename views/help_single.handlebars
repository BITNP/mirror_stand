
<style>
	.markdown-body {
		box-sizing: border-box;
		min-width: 200px;
		max-width: 980px;
		margin: 0 auto;
		padding: 45px;
	}

	@media (max-width: 767px) {
		.markdown-body {
			padding: 15px;
		}
	}
</style>
<div class="body">
	{{>topbar }}

	{{>header }}

	<div class="clearfix space50"></div>

	<!-- BLOG SINGLE CONTENT -->
	<div class="container main-content" id="blog-content">
		<div class="row">
			<ul class="bcrumbs">
				<li><a href="#"><i class="fa fa-home"></i></a></li>
				<li><span>镜像帮助文档</span></li>
			</ul>
			<div class="clearfix space40"></div>

			<div class="row about width-100">
				<div class="col-md-12 blog-content2 blog-content4 blog-single">
					<article>
						<div class="bc4-date">{{ month }}, {{ year }} <span>{{ date }}</span></div>
						<div class="bc4-inner">
							<img src="images/help/{{ help_image }}" class="img-responsive mw-80" alt=""/>
							<div class="blog-excerpt">
								<h4><a href="#">{{ help_name }}</a></h4>
								<div class="post-meta">
									<span><i class="fa fa-user"></i> {{ help_author }}</span>
									<!-- <span><i class="fa fa-comments"></i> 3 Comments</span> -->
								</div>
								<div class="space20"></div>
								<div class="markdown-body box-shadow-1">{{{ help_md }}}</div>
							</div>
						<div class="clearfix"></div>
					</article>
				</div>

			</div>
		</div>
	</div>

	<div class="clearfix space80"></div>

	{{>footer }}
</div>

